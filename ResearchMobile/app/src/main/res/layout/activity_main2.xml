<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:id="@+id/nRelative"
    android:layout_height="match_parent"
    style="@style/background_all"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jorgealberto.researchmobile.InformationMain">



    <ImageView
        android:id="@+id/main_icon_schedule_image_view3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_icon"
        card_view:srcCompat="@mipmap/ic_icon" />

    <ImageView
        android:id="@+id/main_icon_schedule_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/icones150px01"
        />

    <Button
        android:id="@+id/criar"
        android:layout_width="200dp"
        android:layout_height="160dp"

        android:layout_centerInParent="true"
        android:background="#0000"
        android:paddingTop="110dp"
        android:text="Iniciar"
        android:textColor="#2a4c73"
        android:textSize="17sp"
        android:textStyle="normal" />


    <ImageView
        android:id="@+id/imageviewEnviar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:src="@mipmap/icones150px02"
        android:visibility="invisible" />


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        tools:fab_addButtonColorNormal="@color/white"
        tools:fab_addButtonColorPressed="@color/white_pressed"
        tools:fab_addButtonSize = "normal"
        tools:fab_addButtonPlusIconColor="@color/blue_button"
        tools:fab_expandDirection="down"
        android:elevation="10dp"
        tools:fab_labelStyle="@style/menu_labels_style"
        android:focusableInTouchMode="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:fab_colorNormal="@color/white"
            card_view:fab_icon="@mipmap/mapa"
            android:id="@+id/gps"
            card_view:fab_title="Gps"
            tools:fab_colorPressed="@color/white_pressed"
            tools:fab_size="mini"/>


        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:fab_colorNormal="@color/white"
            card_view:fab_icon="@mipmap/chat"
            card_view:fab_title="Chat"
            tools:fab_colorPressed="@color/white_pressed"
            tools:fab_size="mini"/>


        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/bkp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:fab_colorNormal="@color/white"
            card_view:fab_icon="@mipmap/database"
            tools:fab_colorPressed="@color/white_pressed"/>


        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:fab_colorNormal="@color/white"
            card_view:fab_icon="@mipmap/configuration"
            tools:fab_title="Set bottom menu enabled/disabled"
            tools:fab_colorPressed="@color/white_pressed"/>


    </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </RelativeLayout>