<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="match_parent"

    >
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="1dp"
        android:layout_height="120dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:tag="0"
        android:visibility="visible"
        android:id="@+id/cardViewOcorrencia"
        android:layout_marginTop="0dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nRelative"
            >


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/ImageViewOcorrencia"
                android:tag="0"
                android:focusableInTouchMode="false"
                android:src="@mipmap/bandeira"
                android:padding="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewId"
                android:text="rerereeet"
                android:singleLine="true"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:tag="0"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewReclamante"
                android:text="1"
                android:textStyle="bold"
                android:textSize="15dp"
                android:tag="0"

                android:textIsSelectable="false"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ImageViewOcorrencia"
                android:layout_toEndOf="@+id/ImageViewOcorrencia" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextViewEntrada"
                android:text="2ddddd"
                android:tag="0"
                android:textStyle="bold"
                android:textSize="15dp"

                android:layout_alignParentBottom="true"
 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewConceito"
                android:text="FI"
                android:tag="0"
                android:layout_marginRight="50dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_alignParentBottom="true"
 />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
