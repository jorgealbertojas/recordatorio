<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contener"
        android:background="@drawable/dashed_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/titulo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar foto"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/foto_camera2"
            app:layout_constraintStart_toStartOf="@+id/foto_camera2"
            app:layout_constraintTop_toBottomOf="@+id/foto_camera2"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/foto_camera2" />

        <ImageButton
            android:id="@+id/foto_camera2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_camera"
            android:background="@null"
            android:text="Registrar foto"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/foto_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:scaleType="centerCrop"
            android:text="Registrar foto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_ajuda_vistoria3"
            app:layout_constraintVertical_chainStyle="spread_inside"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent" />



        <ImageButton
            android:id="@+id/foto_camera_elipse"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/circle_text_view"
            android:text="Registrar foto"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/foto_camera_dentro"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="2dp"
            android:src="@mipmap/ic_camera"
            android:text="Registrar foto"

            card_view:layout_constraintBottom_toBottomOf="@+id/foto_camera_elipse"
            card_view:layout_constraintEnd_toEndOf="@+id/foto_camera_elipse"
            card_view:layout_constraintStart_toStartOf="@+id/foto_camera_elipse"
            card_view:layout_constraintTop_toTopOf="@+id/foto_camera_elipse" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>