<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/txtlogin"
    style="@style/background_all"
    android:background="#4a89ff"
    android:weightSum="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_weight="0.05" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@mipmap/n_marca"
        android:layout_marginBottom="30dp"
        />



    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="wrap_content" 
    	android:layout_gravity="center_horizontal"
    	android:layout_height="wrap_content">  
    <TableRow>
    <TextView
        style="@style/form_label"
        android:id="@+id/textView1"
        android:text="Login:"
        />

        <EditText
            android:id="@+id/editEntrevistado"
            style="@style/form_input"
            android:background="@drawable/rounded_corner"
            android:ems="10"
            android:text="">

            <requestFocus />
        </EditText>
     </TableRow>
 
</TableLayout>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    	android:layout_width="wrap_content" 
    	android:layout_gravity="center_horizontal"
    	android:layout_height="wrap_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView2"
            android:layout_column="1" />
    </TableRow>

    <TableRow>
    <TextView
        style="@style/form_label"
        android:id="@+id/textViewselecionado"
        android:text="Senha:" />

        <EditText
            android:id="@+id/editsenhalogin"
            style="@style/form_input"
            android:layout_column="2"
            android:background="@drawable/rounded_corner"
            android:ems="10"
            android:inputType="textPassword"
            android:text="" />

     </TableRow>

    <TextView
        android:id="@+id/imageButton1"
        style="@style/icon_confirmar"
        android:layout_height="35dp"
        android:background="@drawable/rounded_corner_confirmar"
        android:text="Entrar"
        android:textAlignment="center" />
 
</TableLayout>




    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    	android:layout_width="wrap_content" 
    	android:layout_gravity="center_horizontal"
    	android:layout_height="wrap_content">  
    <TableRow>

    <TextView
        style="@style/form_label"
        android:id="@+id/textView3"
        android:text="Cliente" />

    <EditText
        android:id="@+id/editcliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:ems="10" />

     </TableRow>
 
</TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    	android:layout_width="wrap_content" 
    	android:layout_gravity="center_horizontal"
    	android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView10"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/form_label"
                android:id="@+id/textView4"
                android:text="Senha:" />

            <EditText
                android:id="@+id/editsenhacliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:ems="10"
                android:inputType="textPassword" />

        </TableRow>

        <TextView
            android:id="@+id/imageButton2"
            style="@style/icon_confirmar"
            android:layout_height="35dp"
            android:background="@drawable/rounded_corner_confirmar"
            android:text="Entrar"
            android:textAlignment="center" />

    </TableLayout>



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />




    
 	<EditText
 	    android:id="@+id/EditTextBKP"
 	    android:layout_width="302dp"
 	    android:layout_height="wrap_content"
 	    android:hint="memoria externa"
 	    android:visibility="invisible" />
 	
    <EditText
        android:id="@+id/editTextIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ip"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal" />

</LinearLayout>