<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    style="@style/background_all"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#2a4c73"
        android:textSize="19sp"
        android:text="Escolha a pesquisa desejada, selecione as funcionalidades que ira utilizar e confirme para atualizar seu App. " />



    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewselecionado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@android:color/white"
        android:text="TextView"
        android:textColor="#2a4c73"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#84e9ff"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        > </RelativeLayout>

    <CheckBox
        android:id="@+id/checkBoxGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text=" Localização GPS"
        android:textColor="#2a4c73"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkBoxvoz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Gravação Voz"
        android:textColor="#2a4c73"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        />

    <CheckBox
        android:id="@+id/checkBoxTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Tempo de 2 minutos"
        android:textColor="#2a4c73"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        />

    <CheckBox
        android:id="@+id/checkBoxAutomatico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Atualização automática"
        android:textColor="#2a4c73"
        android:textSize="18sp"
        android:layout_marginBottom="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#84e9ff"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        > </RelativeLayout>

    <RadioButton
        android:id="@+id/rPequena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Fonte pequena (15)"
        android:textColor="#2a4c73"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        />

    <RadioButton
        android:id="@+id/rMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Fonte média (18)"
        android:textColor="#2a4c73"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <RadioButton
        android:id="@+id/rGrande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Fonte grande (20)"
        android:textColor="#2a4c73"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>

    <ImageButton
        android:id="@+id/iniciarthread"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/icones150px11"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        >
    </ImageButton>

    <TextView
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:text="BAIXAR"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#2a4c73"
        />

</LinearLayout>

