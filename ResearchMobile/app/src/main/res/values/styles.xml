<resources>


    <style name="AppTheme" parent="MyMaterialTheme.Base">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/background_material_light</item>


    </style>


    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="background_all">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">4.1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextHelp">
        <item name="android:textSize">@dimen/text_size_help</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="TextHelp10">
        <item name="android:textSize">@dimen/text_size_help10</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="form_label">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="form_input">
        <item name="android:padding">5dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="icon_confirmar">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>




</resources>
